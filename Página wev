    <script>
        // Tu nÃºmero de celular
        const PHONE_NUMBER = '3186359881';
        
        // Formato el nÃºmero para mostrar
        function formatPhone(phone) {
            return phone.replace(/(\d{3})(\d{3})(\d{4})/, '$1 $2 $3');
        }
        
        // Mostrar nÃºmero formateado
        document.getElementById('phoneNumber').textContent = formatPhone(PHONE_NUMBER);
        
        // FunciÃ³n para abrir Nequi
        function openNequi() {
            console.log('Intentando abrir Nequi...');
            
            // Deep links documentados para Nequi
            const deepLinks = [
                'nequi://',  // Deep link principal
                'com.nequi.MobileApp://',  // Alternativo
            ];
            
            // Intenta cada deep link
            let attempted = false;
            deepLinks.forEach((link, index) => {
                setTimeout(() => {
                    if (!attempted) {
                        window.location.href = link;
                        attempted = true;
                    }
                }, index * 300);
            });
            
            // Fallback: redirige a tienda despuÃ©s de 2 segundos
            setTimeout(() => {
                const userAgent = navigator.userAgent || navigator.vendor || window.opera;
                
                if (/android/i.test(userAgent)) {
                    window.open('https://play.google.com/store/apps/details?id=com.nequi.MobileApp', '_blank');
                } else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                    window.open('https://apps.apple.com/co/app/nequi-colombia/id1085240467', '_blank');
                }
            }, 2000);
        }
        
        // FunciÃ³n para abrir Bancolombia
        function openBancolombia() {
            console.log('Intentando abrir Bancolombia...');
            
            // Deep links para Bancolombia Personas
            const deepLinks = [
                'bancolombiamovil://',  // Deep link principal
                'com.todo1.mobile://',  // Package alternativo
            ];
            
            let attempted = false;
            deepLinks.forEach((link, index) => {
                setTimeout(() => {
                    if (!attempted) {
                        window.location.href = link;
                        attempted = true;
                    }
                }, index * 300);
            });
            
            // Fallback a tiendas
            setTimeout(() => {
                const userAgent = navigator.userAgent || navigator.vendor || window.opera;
                
                if (/android/i.test(userAgent)) {
                    window.open('https://play.google.com/store/apps/details?id=com.todo1.mobile', '_blank');
                } else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                    window.open('https://apps.apple.com/co/app/bancolombia/id412273880', '_blank');
                }
            }, 2000);
        }
        
        // FunciÃ³n para abrir PSE
        function openPSE() {
            console.log('Abriendo PSE web...');
            
            // PSE es principalmente web, pero copiamos el nÃºmero
            copyToClipboard();
            
            // Abre el portal PSE
            setTimeout(() => {
                window.open('https://www.pse.com.co/persona', '_blank');
            }, 500);
        }
        
        // FunciÃ³n para copiar al portapapeles
        function copyToClipboard() {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(PHONE_NUMBER).then(() => {
                    showNotification();
                }).catch(err => {
                    fallbackCopy();
                });
            } else {
                fallbackCopy();
            }
        }
        
        // MÃ©todo alternativo de copia
        function fallbackCopy() {
            const textArea = document.createElement('textarea');
            textArea.value = PHONE_NUMBER;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            document.body.appendChild(textArea);
            textArea.select();
            
            try {
                document.execCommand('copy');
                showNotification();
            } catch (err) {
                alert('NÃºmero: ' + PHONE_NUMBER);
            }
            
            document.body.removeChild(textArea);
        }
        
        // Mostrar notificaciÃ³n
        function showNotification() {
            const notification = document.getElementById('notification');
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
    </script>
